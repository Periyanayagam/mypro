<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="perusu.mobolutions.com.mycalculator.MainActivity">


    <ListView
        android:layout_gravity="top"
        android:layout_marginTop="5dp"
        android:id="@+id/listView"
        android:choiceMode="none"
        android:scrollingCache="true"
        android:scrollIndicators="left"
        android:smoothScrollbar="true"
        android:stackFromBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:theme="@style/Animation.AppCompat.Dialog"
        android:fastScrollAlwaysVisible="true"
        android:fastScrollEnabled="true"
        android:fastScrollStyle="@style/Animation.AppCompat.DropDownUp">
    </ListView>

    <TextView
        android:textSize="40dp"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView"/>

        <LinearLayout
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="="
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:text="0"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

</LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
            android:text="C"
            android:background="@drawable/customborder"
            android:textColor="#f50909"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:onClick="clearClicked"
            android:layout_height="wrap_content" />

            <Button
                android:text="D"
                android:background="@drawable/customborder"
                android:textColor="#f50909"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:onClick="delClicked"
                android:layout_height="wrap_content" />

            <Button
                android:text="*"
                android:textStyle="bold"
                android:background="@drawable/customborder"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:onClick="mulClicked"
                android:layout_height="wrap_content" />

            <Button
                android:text="/"
                android:textStyle="bold"
                android:background="@drawable/customborder"
                android:textColor="#000"
                android:textSize="15dp"
                android:onClick="divClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="7"
                android:background="@drawable/customborder"
                android:textColor="#000"
                android:textSize="15dp"
                android:onClick="sevenClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="8"
                android:background="@drawable/customborder"
                android:textColor="#000"
                android:textSize="15dp"
                android:onClick="eightClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="9"
                android:background="@drawable/customborder"
                android:textColor="#000"
                android:textSize="15dp"
                android:onClick="nineClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="-"
                android:textStyle="bold"
                android:background="@drawable/customborder"
                android:textColor="#000"
                android:textSize="15dp"
                android:onClick="minusClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="4"
                android:background="@drawable/customborder"
                android:textColor="#000"
                android:textSize="15dp"
                android:onClick="fourClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="5"
                android:background="@drawable/customborder"
                android:textColor="#000"
                android:textSize="15dp"
                android:onClick="fiveClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="6"
                android:background="@drawable/customborder"
                android:textColor="#000"
                android:textSize="15dp"
                android:onClick="sixClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="+"
                android:textStyle="bold"
                android:background="@drawable/customborder"
                android:textColor="#000"
                android:textSize="15dp"
                android:onClick="plusClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:text="1"
                        android:background="@drawable/customborder"
                        android:onClick="oneClicked"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:text="2"
                        android:background="@drawable/customborder"
                        android:onClick="twoClicked"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:text="3"
                        android:background="@drawable/customborder"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:onClick="threeClicked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:text="%"
                        android:background="@drawable/customborder"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:onClick="perClicked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:text="0"
                        android:background="@drawable/customborder"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:onClick="zeroClicked"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:text="E"
                            android:background="@drawable/customborder"
                            android:textColor="#f50909"
                            android:textSize="15dp"
                            android:onClick="endClicked"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <Button
                android:text="="
                android:textColor="#fff"
                android:background="#f15d07"
                android:textSize="15dp"
                android:onClick="equalClicked"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
